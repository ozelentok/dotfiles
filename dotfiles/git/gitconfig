[core]
  editor = /usr/bin/nvim
  excludesfile = ~/.gitignore_global
  pager = delta
[interactive]
  diffFilter = delta --color-only
[merge]
  conflictStyle = zdiff3
  tool = diffview
[mergetool]
  prompt = true
[mergetool "fugitive"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[mergetool "diffview"]
  cmd = nvim -f -c \"DiffviewOpen\" \"$MERGED\"
[delta]
  navigate = true
  line-numbers = true
  side-by-side = true
  hyperlinks = true
[pull]
  rebase = true
[init]
  defaultBranch = main
[rebase]
  instructionFormat = %s%nexec GIT_COMMITTER_DATE=\"%cD\" git commit --amend --no-edit --date=\"%cD\"
[color]
  ui = auto
[rerere]
  enabled = true
