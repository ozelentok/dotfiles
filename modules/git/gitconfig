[merge]
	tool = fugitive
[core]
	editor = /usr/bin/nvim
	excludesfile = ~/.gitignore_global
[mergetool]
	prompt = true
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
