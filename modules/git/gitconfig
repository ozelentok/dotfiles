[merge]
	tool = nvimdiff
[core]
	editor = /usr/bin/nvim
	excludesfile = ~/.gitignore_global
[mergetool]
	prompt = true
[mergetool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c -'$windcmd w' -c 'wincmd J'
